<?xml version='1.0' encoding='utf-8'?>
<widget id="au.oakton.com.toyotapoc" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="org.pgsqlite.SQLitePlugin" />
    </feature>
    <icon density="ldpi" src="platforms/android/res/drawable-ldpi/toyota_icon.png" />
    <icon density="mdpi" src="platforms/android/res/drawable-mdpi/toyota_icon.png" />
    <icon density="hdpi" src="platforms/android/res/drawable-hdpi/toyota_icon.png" />
    <icon density="xhdpi" src="platforms/android/res/drawable-xhdpi/toyota_icon.png" />
    <splash density="land-hdpi" src="platforms/android/res/drawable-land-hdpi/splash.png" />
    <splash density="land-ldpi" src="platforms/android/res/drawable-land-ldpi/splash.png" />
    <splash density="land-mdpi" src="platforms/android/res/drawable-land-mdpi/splash.png" />
    <splash density="land-xhdpi" src="platforms/android/res/drawable-land-xhdpi/splash.png" />
    <splash density="port-hdpi" src="platforms/android/res/drawable-port-hdpi/splash.png" />
    <splash density="port-ldpi" src="platforms/android/res/drawable-port-ldpi/splash.png" />
    <splash density="port-mdpi" src="platforms/android/res/drawable-port-mdpi/splash.png" />
    <splash density="port-xhdpi" src="platforms/android/res/drawable-port-xhdpi/splash.png" />
    <name>ToyotaPOC</name>
    <description>
        The Toyota Phonegap proof of concept app.
    </description>
    <author email="jason.woods@oakton.com.au" href="http://jasonwoods.com.au">
        Jason Woods
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="5000" />
</widget>
